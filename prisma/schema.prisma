generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int                   @id @default(autoincrement())
  name                  String
  password              String
  phone_number          String                @unique
  email                 String                @unique
  nickname              String                @unique
  birth                 DateTime?
  gender                String
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  newsletters           NewslettersOnUsers[]
}

model NewslettersOnUsers {
  user            User        @relation(fields: [user_id], references: [id])
  user_id         Int
  newsletter      Newsletter  @relation(fields: [newsletter_id], references: [id])
  newsletter_id   Int
  createdAt       DateTime    @default(now())

  @@id([user_id, newsletter_id])
}

model Newsletter {
  id                      Int                  @id @default(autoincrement())
  name                    String               @unique
  first_description       String
  second_description      String
  detail_description      String
  publication_cycle       String
  subscribe_url           String               @unique
  preview_url             String               @unique
  image_url               String
  createdAt               DateTime             @default(now())
  updatedAt               DateTime             @updatedAt
  users                   NewslettersOnUsers[]
  industries              Industry[]
  interests               Interest[]
}

model Industry {
  id                 Int                     @id @default(autoincrement())
  name               String                  @unique
  newsletters        Newsletter[]
}

model Interest {
  id                 Int                    @id @default(autoincrement())
  name               String                 @unique
  newsletters        Newsletter[]
}